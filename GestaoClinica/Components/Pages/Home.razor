@page "/"
@using GestaoClinica.Services.Interfaces
@using GestaoClinica.Entities
@using MudBlazor
@inject NavigationManager Navigation

<MudPaper Elevation="1" Style="padding: 24px; margin: 24px;">
    <MudTypography Variant="Variant.h3" Style="margin-bottom: 16px; text-align: center;">
        Bem-vindo ao ClinicPro
    </MudTypography>
    
    <MudTypography Variant="Variant.h6" Style="margin-bottom: 24px; text-align: center;">
        Sistema de Gestão Clínica
    </MudTypography>
    
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudCard Style="height: 100%;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Primary" Size="Size.Large" />
                    <MudTypography Variant="Variant.h6" Style="margin: 16px 0;">Pacientes</MudTypography>
                    <MudTypography Variant="Variant.body2">
                        Gerencie todos os pacientes da clínica, incluindo dados pessoais e histórico médico.
                    </MudTypography>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@(() => Navigation.NavigateTo("/clientes"))">
                        Acessar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudCard Style="height: 100%;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Event" Color="Color.Secondary" Size="Size.Large" />
                    <MudTypography Variant="Variant.h6" Style="margin: 16px 0;">Agendamentos</MudTypography>
                    <MudTypography Variant="Variant.body2">
                        Controle todas as consultas e agendamentos da clínica.
                    </MudTypography>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Secondary">
                        Acessar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        
        <MudItem xs="12" sm="6" md="4">
            <MudCard Style="height: 100%;">
                <MudCardContent>
                    <MudIcon Icon="@Icons.Material.Filled.Assessment" Color="Color.Tertiary" Size="Size.Large" />
                    <MudTypography Variant="Variant.h6" Style="margin: 16px 0;">Relatórios</MudTypography>
                    <MudTypography Variant="Variant.body2">
                        Acesse relatórios e estatísticas da clínica.
                    </MudTypography>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" Color="Color.Tertiary">
                        Acessar
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudPaper>