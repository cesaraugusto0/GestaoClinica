@page "/"
@using GestaoClinica.Data.Context
@using GestaoClinica.Entities
@using MudBlazor
@inject SQLServerDbContext DbContext
@using Microsoft.EntityFrameworkCore

<PageTitle>Lista de Clientes</PageTitle>

<MudContainer>
    <MudPaper Elevation="3" Class="pa-4">
        <MudText Typo="Typo.h3" GutterBottom="true">Lista de Clientes</MudText>

        @if (isLoading)
        {
            <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
            <MudText>Carregando dados...</MudText>
        }
        else if (errorMessage != null)
        {
            <MudAlert Severity="Severity.Error">@errorMessage</MudAlert>
        }
        else if (!_clientes.Any())
        {
            <MudAlert Severity="Severity.Info">Nenhuma Clientes cadastrada</MudAlert>
        }
        else
        {
            <MudTable Items="@_clientes" Hover="true" Breakpoint="Breakpoint.Sm">
                <HeaderContent>
                    <MudTh>ID</MudTh>
                    <MudTh>Nome</MudTh>
                    <MudTh>Email</MudTh>
                    <MudTh>Telefone</MudTh>
                    <MudTh>CPF</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd>@context.IdCliente</MudTd>
                    <MudTd>@context.Nome</MudTd>
                    <MudTd>@context.Email</MudTd>
                    <MudTd>@context.Telefone</MudTd>
                    <MudTd>@context.CPF</MudTd>
                </RowTemplate>
            </MudTable>
            
            <MudText Class="mt-4">Total de clientes: @_clientes.Count</MudText>
        }
    </MudPaper>
</MudContainer>

@code {
    private List<Cliente> _clientes = new();
    private bool isLoading = true;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Carrega os dados diretamente do DbContext
            _clientes = await DbContext.clientes.ToListAsync();
            
            if (_clientes.Any())
            {
                Console.WriteLine($"Total de pessoas carregadas: {_clientes.Count}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erro ao carregar dados: {ex.Message}";
            Console.WriteLine($"ERRO: {ex}");
        }
        finally
        {
            isLoading = false;
        }
    }
}